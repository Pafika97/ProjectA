# === Telegram ===
TELEGRAM_BOT_TOKEN=123456:ABC-your-token-here
TELEGRAM_CHAT_ID=123456789  # your chat or channel id

# === Twitter/X (optional; requires paid API v2) ===
TWITTER_BEARER_TOKEN=your_x_api_bearer_token

# === Facebook Graph API (optional) ===
FB_APP_ID=your_fb_app_id
FB_APP_SECRET=your_fb_app_secret
# If you have a long-lived user/page access token, set it instead of app id/secret:
FB_ACCESS_TOKEN=your_fb_access_token

# === Truth Social (no public API) ===
# If you have a Mastodon-compatible instance and token, you can try these (optional):
MASTODON_BASE_URL=https://truthsocial.com  # or another compatible instance if applicable
MASTODON_ACCESS_TOKEN=your_mastodon_token  # only if your account/instance supports it
